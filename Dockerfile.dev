FROM python:3.12-slim

ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

WORKDIR /app

# System deps + Node.js 22 (via NodeSource) + enable Corepack
RUN apt-get update && apt-get install -y --no-install-recommends \
      ca-certificates curl gnupg build-essential git pkg-config \
  && mkdir -p /etc/apt/keyrings \
  && curl -fsSL https://deb.nodesource.com/gpgkey/nodesource-repo.gpg.key \
       | gpg --dearmor -o /etc/apt/keyrings/nodesource.gpg \
  && echo "deb [signed-by=/etc/apt/keyrings/nodesource.gpg] https://deb.nodesource.com/node_22.x nodistro main" \
       > /etc/apt/sources.list.d/nodesource.list \
  && apt-get update && apt-get install -y --no-install-recommends nodejs \
  && corepack enable \
  # optional: activate specific package managers/versions
  # && corepack prepare pnpm@latest --activate \
  # && corepack prepare yarn@stable --activate \
  && apt-get purge -y --auto-remove gnupg \
  && rm -rf /var/lib/apt/lists/*

# (Optional) Show versions at build time
RUN python --version && node --version && npm --version

RUN npm install -g @google/gemini-cli@latest

COPY requirements.txt requirements_dev.txt /app/
RUN pip install --no-cache-dir -r requirements.txt
RUN pip install --no-cache-dir -r requirements_dev.txt

COPY . .

# Set the entrypoint to bash to keep container alive
CMD ["bash"]